            <TextView android:id="@id/information_text" android:text="@string/information_device_admin_needed" style="@style/PopupContent" />
            <TextView android:textStyle="bold" android:gravity="center_horizontal" android:id="@id/information_text_extra" android:text="@string/information_device_admin_extra" style="@style/PopupContent" />
            <Button android:id="@id/information_btn_ok" android:text="@string/information_btn_ok" style="@style/GreenWideButton" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>